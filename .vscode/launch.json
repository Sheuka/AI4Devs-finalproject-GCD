    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests AuthService",
            "program": "${workspaceFolder}/backend/services/auth-service/node_modules/jest/bin/jest",
            "args": [
                "--runInBand",
                "--watchAll=false",
                "--config",
                "${workspaceFolder}/backend/services/auth-service/jest.config.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/backend/services/auth-service"
        },
		{
            "type": "node",
            "request": "launch",
            "name": "Debug Tests UserService",
            "program": "${workspaceFolder}/backend/services/user-service/node_modules/jest/bin/jest",
            "args": [
                "--runInBand",
                "--watchAll=false",
                "--config",
                "${workspaceFolder}/backend/services/user-service/jest.config.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/backend/services/user-service"
        }
    ]
}